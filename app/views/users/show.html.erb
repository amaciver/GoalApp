<h1>Show</h1>



  <form action="<%= goals_url %>" method="post">
    <%= auth_token %>
    <label>Body:
      <textarea name="goal[body]"></textarea>
    </label>
    <br>
    <label>
      Private: <input type="radio" name="goal[status]" value="private" checked>
    </label>
    <label>
      Public: <input type="radio" name="goal[status]" value="public">
    </label>
    <br>
    <input type="submit" value="Create Goal">
  </form>
<br><br>
  

<%= button_to "Comment on Goals", new_comment_url, method: :get %>

<ul>
  <% @user.goals.each do |goal| %>
    <li><%= goal.body %> </li>
      <% goal.comments.each do |comment| %>
        <%= comment.body %>
      <% end %>

  <% end %>
</ul>
